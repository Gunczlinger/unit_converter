<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_prompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <EditText
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/example_dec"
        android:inputType="numberDecimal"
        android:gravity="center"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/output_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_prompt"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="268dp" />

    <EditText
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:hint="Result here"
        android:text=""
        android:gravity="center"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="304dp" />

    <Spinner
        android:id="@+id/convert_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="613dp" />


</androidx.constraintlayout.widget.ConstraintLayout>